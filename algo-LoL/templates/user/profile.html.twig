{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<main class="main-profile">
    <div class="all-content-profile">
        <section class="all-personal-info">
            <div class="personal-img">
                <img src="/assets/images/pinguin.jpg" alt="">
            </div>
            <div class="personal-info">
                <div class="personal-info-container">
                    <div class="country-firstname">
                        <img src="/assets/images/flags/{{ user.country }}.png" alt="">
                        <p class="personal-firstname">{{ user.firstname }}</p>
                    </div>
                    <div class="personal-age">
                        <p><span>{{ user.age }}</span> ans</p>
                    </div>
                </div>
                <div class="content-all-availability">
                    <div class="title-availability">
                        <h3>Disponibilités</h3>
                    </div>
                    <div class="content-all-day">
                        <div class="item-day">
                            <div class="label-day">
                                <p>Lundi</p>
                            </div>
                            <div class="result-day">
                                <p>8h00/10h00</p>
                            </div>
                        </div>
                        <div class="item-day">
                            <div class="label-day">
                                <p>Mardi : </p>
                            </div>
                            <div class="result-day">
                                <p>Pas disponible</p>
                            </div>
                        </div>
                        <div class="item-day">
                            <div class="label-day">
                                <p>Mercredi : </p>
                            </div>
                            <div class="result-day">
                                <p>8h00/10h00 - 19h00/23h00</p>
                            </div>
                        </div>
                        <div class="item-day">
                            <div class="label-day">
                                <p>Jeudi : </p>
                            </div>
                            <div class="result-day">
                                <p>Pas disponible</p>
                            </div>
                        </div>
                        <div class="item-day">
                            <div class="label-day">
                                <p>Vendredi : </p>
                            </div>
                            <div class="result-day">
                                <p>20h00/00h00</p>
                            </div>
                        </div>
                        <div class="item-day">
                            <div class="label-day">
                                <p>Samedi : </p>
                            </div>
                            <div class="result-day">
                                <p>Toute la journée</p>
                            </div>
                        </div>
                        <div class="item-day">
                            <div class="label-day">
                                <p>Dimanche : </p>
                            </div>
                            <div class="result-day">
                                <p>Pas disponible</p>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
            <div class="btn-modify-profile">
                <a href="{{ path('step_one') }}">
                    <div class="btn-modify">
                        <p>Modifier mon profil</p>
                    </div>
                </a>
            </div>
        </section>
        <section class="game-info">
            {% if user.favoriteChampion is empty() %}
                <style>.bg-favorite-champ{background-image: url(../assets/images/background/teemo.jpg);}</style>
            {% else %}
                <style>.bg-favorite-champ{background-image: url(../assets/images/background/{{user.favoriteChampion[0]}}.jpg);}</style>
            {% endif %}
            <div class="bg-favorite-champ"></div>

            <div class="all-game-info">
                <section class="left-game-section">
                    <div class="content-all-rank">
                        <div class="content-rank solo">
                            <h5>Solo rank</h5>
                            <img src="/assets/images/rank/{{ user.soloRank }}.png" alt="">
                            <p>{{ user.soloRank }} {{ user.soloDivision }}</p>
                        </div>
                        <div class="content-rank flex">
                            <h5>Flex rank</h5>
                            <img src="/assets/images/rank/{{ user.flexRank }}.png" alt="">
                            <p>{{ user.flexRank }} {{ user.flexDivision }}</p>
                        </div>
                    </div>
                    <div class="content-table-champ">
                        <div class="content-three-champ favorite">
                            <div class="title-three-champ">
                                <h5>Champions favoris</h5>
                            </div>
                            {% if user.favoriteChampion is empty() %}
                                <div class="content-card-champ">
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'teemo'}) }}">
                                            <img src="/assets/images/champions/teemo.png" alt="">
                                        </a>
                                    </div>
                                    <div class="champ-card">
                                            <a href="{{ path('champion_show', {'name':'teemo'}) }}">
                                                <img src="/assets/images/champions/teemo.png" alt="">
                                            </a>
                                    </div>
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'teemo'}) }}">
                                            <img src="/assets/images/champions/teemo.png" alt="">
                                        </a>
                                    </div>
                                </div>
                            {% else %}
                                <div class="content-card-champ">
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'tristana'}) }}">
                                            <img src="/assets/images/champions/tristana.png" alt="">
                                        </a>
                                    </div>
                                    <div class="champ-card">
                                            <a href="{{ path('champion_show', {'name':'miss fortune'}) }}">
                                                <img src="/assets/images/champions/miss fortune.png" alt="">
                                            </a>
                                    </div>
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':user.favoriteChampion[0]}) }}">
                                            <img src="/assets/images/champions/{{ user.favoriteChampion[0] }}.png" alt="">
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="content-three-champ hated">
                            <div class="title-three-champ">
                                <h5>Champions non apprécié</h5>
                            </div>
                            {% if user.hatedChampion is empty() %}
                                <div class="content-card-champ">                               
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'teemo'}) }}">
                                            <img src="/assets/images/champions/teemo.png" alt="">
                                        </a>
                                    </div>
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'teemo'}) }}">
                                            <img src="/assets/images/champions/teemo.png" alt="">
                                        </a>
                                    </div>
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'teemo'}) }}">
                                            <img src="/assets/images/champions/teemo.png" alt="">
                                        </a>
                                    </div>
                                </div>
                            {% else %}
                                <div class="content-card-champ">                               
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':user.hatedChampion[0]}) }}">
                                            <img src="/assets/images/champions/{{ user.hatedChampion[0] }}.png" alt="">
                                        </a>
                                    </div>
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'senna'}) }}">
                                            <img src="/assets/images/champions/senna.png" alt="">
                                        </a>
                                    </div>
                                    <div class="champ-card">
                                        <a href="{{ path('champion_show', {'name':'lucian'}) }}">
                                            <img src="/assets/images/champions/lucian.png" alt="">
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </section>
                <section class="right-game-section">
                    <div class="content-gamer-info">
                        <div class="username-game">
                        {% if user.username is empty() %}
                            <h1>{{ user.email }}</h1>
                        {% else %}
                            <h1>{{ user.username }}</h1>
                        {% endif %}
                            <div class="game-region">
                                <div class="flag -player">
                                    <img src="/assets/images/flags/{{ user.country }}.png" alt="">
                                    <p>{{ user.country }}</p>
                                </div>
                                {% if user.username is empty() %}

                                {% else %}
                                <p class="space"> - </p>
                                <div class="flag -game">
                                    <img src="/assets/images/flags/{{ user.countryInGame }}.png" alt="">
                                    <p>{{ user.countryInGame }}</p>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        <div>
                            <p>{{ user.firstRole }}</p>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </div>
</main>
{% endblock %}
