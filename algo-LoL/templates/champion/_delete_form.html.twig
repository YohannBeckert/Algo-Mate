<form method="post" action="{{ path('champion_delete', {'name': champion.name}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ champion.id) }}">
    <button class="btn">Delete</button>
</form>
