{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<main class="main-step-2 bg-main-step">
    <section class="content-step bg-step">
        <div class="title-step">
            <h1>Étape 2</h1>
        </div>
        <div class="text-form under-title">
            <div class="explain-text">
                <p>
                    Informations personnelles en jeu
                </p>
                <p class="complementary-info">(Toutes les informations doivent être rempli et seront affichées sur votre profil)</p>
            </div>
        </div>
        <div class="content-step-form">
            {{ form_start(form) }}

                <div class="item-form-step step-2">
                    <div class="label-item-step label-step-2">
                        {{ form_label(form.username) }}
                    </div>
                    <div class="input-item-step input-step-2">
                        {{ form_widget(form.username) }}
                    </div>
                    <div class="error-item-step">
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                <div class="item-form-step width-100 step-2">
                    <div class="label-item-step">
                        {{ form_label(form.countryInGame) }}
                    </div>
                    <div class="input-item-step">
                        {{ form_widget(form.countryInGame) }}
                    </div>
                    <div class="error-item-step">
                        {{ form_errors(form.countryInGame) }}
                    </div>
                </div>
                <div class="all-personal">
                    <div class="title-personal">
                        <h3>Vos Ranks</h3>
                        <p class="complementary-info">(Si vous êtes unranked, veuillez choisir la division "N/A")</p>
                    </div>
                    <div class="content-personal">
                        <div class="personal-solo-rank">
                            <div class="item-form-step aligner">
                                <div class="label-item-step">
                                    {{ form_label(form.soloRank) }}
                                </div>
                                <div class="input-item-step">
                                    {{ form_widget(form.soloRank) }}
                                </div>
                                <div class="error-item-step">
                                    {{ form_errors(form.soloRank) }}
                                </div>
                            </div>
                            <div class="item-form-step aligner">
                                <div class="label-item-step">
                                    {{ form_label(form.soloDivision) }}
                                </div>
                                <div class="input-item-step">
                                    {{ form_widget(form.soloDivision) }}
                                </div>
                                <div class="error-item-step">
                                    {{ form_errors(form.soloDivision) }}
                                </div>
                            </div>
                        </div>
                        <div class="personal-flex-rank">
                            <div class="item-form-step aligner">
                                <div class="label-item-step">
                                    {{ form_label(form.flexRank) }}
                                </div>
                                <div class="input-item-step">
                                    {{ form_widget(form.flexRank) }}
                                </div>
                                <div class="error-item-step">
                                    {{ form_errors(form.flexRank) }}
                                </div>
                            </div>
                            <div class="item-form-step aligner">
                                <div class="label-item-step">
                                    {{ form_label(form.flexDivision) }}
                                </div>
                                <div class="input-item-step">
                                    {{ form_widget(form.flexDivision) }}
                                </div>
                                <div class="error-item-step">
                                    {{ form_errors(form.flexDivision) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="all-personal">
                    <div class="title-personal">
                        <h3>Vos Rôles</h3>
                        <p class="complementary-info">(Vous devez sélectionner au minimum votre rôle principal.)</p>
                    </div>
                    <div class="content-personal role">
                        <div class="item-form-step aligner">
                            <div class="label-item-step">
                                {{ form_label(form.firstRole) }}
                            </div>
                            <div class="input-item-step">
                                {{ form_widget(form.firstRole) }}
                            </div>
                            <div class="error-item-step">
                                {{ form_errors(form.firstRole) }}
                            </div>
                        </div>
                        <div class="item-form-step aligner">
                            <div class="label-item-step">
                                {{ form_label(form.secondRole) }}
                            </div>
                            <div class="input-item-step">
                                {{ form_widget(form.secondRole) }}
                            </div>
                            <div class="error-item-step">
                                {{ form_errors(form.secondRole) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="all-personal">
                    <div class="title-personal">
                        <h3>Vos Champions</h3>
                        <p class="complementary-info">(Vous devez sélectionner au minimum 1 champion et au maximum 3 champions.)</p>
                    </div>
                    <div class="content-personal">
                        <div class="item-form-step aligner">
                            <div class="label-item-step">
                                {{ form_label(form.favoriteChampion) }}
                            </div>
                            <div class="input-item-step">
                                {{ form_widget(form.favoriteChampion) }}
                            </div>
                            <div class="error-item-step">
                                {{ form_errors(form.favoriteChampion) }}
                            </div>
                        </div>
                        <div class="item-form-step aligner">
                            <div class="label-item-step">
                                {{ form_label(form.hatedChampion) }}
                            </div>
                            <div class="input-item-step">
                                {{ form_widget(form.hatedChampion) }}
                            </div>
                            <div class="error-item-step">
                                {{ form_errors(form.hatedChampion) }}
                            </div>
                        </div>
                    </div>
                </div>
        <div class="content-btn-found btn-step">
                <button type="submit" class="btn-found next-step">
                    <p>Étape suivante</p>
                </button>
        </div>
            {{ form_end(form) }}
        </div>     
    </section>
</main>
{% endblock %}
